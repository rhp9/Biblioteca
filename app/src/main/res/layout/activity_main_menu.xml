<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rhp.biblioteca.MainMenu">


    <ImageButton
        android:id="@+id/bPrestados"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:adjustViewBounds="true"
        android:background="@color/white"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/prestados"
        android:layout_marginTop="74dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/bCPrestados"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@color/white"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ver_prestados"
        android:layout_alignTop="@+id/bPrestados"
        android:layout_alignStart="@+id/bRegresar" />

    <ImageButton
        android:id="@+id/bRegresar"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:adjustViewBounds="true"
        android:background="@color/white"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/regresar"
        android:layout_marginEnd="49dp"
        android:layout_below="@+id/bCPrestados"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/bCLibros"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@color/white"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/consulta_libros3"
        android:layout_alignTop="@+id/bRegresar"
        android:layout_alignStart="@+id/bPrestados" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bPrestados"
        android:layout_marginStart="24dp"
        android:layout_marginTop="19dp"
        android:text="Pedir Prestado Un Libro" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consulta Tus Prestamos"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Consulta Libros"
        android:layout_below="@+id/bCLibros"
        android:layout_alignStart="@+id/bCLibros" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresa tus Libros"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/bRegresar" />

</RelativeLayout>